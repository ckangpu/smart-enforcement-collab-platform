# Copy this file to .env (DO NOT commit .env)
# Windows PowerShell:
#   Copy-Item .env.example .env

# ===== Postgres (superuser for Flyway) =====
POSTGRES_DB=secp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ===== App DB user (created by Flyway V1) =====
DB_APP_USER=secp_app
DB_APP_PASSWORD=secp_app

# ===== Redis =====
# (container uses default port 6379)

# ===== MinIO (local S3) =====
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123456
# Bucket used by minio-init to auto-create on startup
MINIO_BUCKET=secp-dev
SECP_S3_REGION=us-east-1
SECP_S3_BUCKET=secp-dev

# ===== API JWT (dev only) =====
SECP_JWT_SECRET=dev-secret-change-me

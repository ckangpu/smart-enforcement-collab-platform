# Prod environment skeleton (keys only; DO NOT put real secrets here)
# Copy to .env in your deployment environment and inject real values via CI/secret manager.

# ===== DB =====
# External Postgres connection for API/Worker (do NOT commit real values)
SECP_DB_HOST=<prod-db-host>
SECP_DB_PORT=<prod-db-port>
SECP_DB_NAME=<prod-db-name>
SECP_DB_USER=<prod-app-db-user>
SECP_DB_PASS=<prod-app-db-pass>

# Backward-compat (some configs may still reference SECP_DB_DB)
SECP_DB_DB=<prod-db-name>

# Optional: Flyway can use a dedicated privileged account (recommended)
# If empty, Flyway falls back to the main datasource.
SPRING_FLYWAY_URL=
SPRING_FLYWAY_USER=
SPRING_FLYWAY_PASSWORD=

# ===== Redis =====
SECP_REDIS_HOST=<prod-redis-host>
SECP_REDIS_PORT=<prod-redis-port>

# ===== Storage mode =====
SECP_STORAGE_MODE=s3

# ===== S3 =====
# Standard AWS S3 can leave SECP_S3_ENDPOINT empty.
SECP_S3_ENDPOINT=
SECP_S3_REGION=<aws-region>
SECP_S3_BUCKET=<prod-s3-bucket>
SECP_S3_ACCESS_KEY=<prod-s3-access-key>
SECP_S3_SECRET_KEY=<prod-s3-secret-key>

# S3 path-style (MinIO/compat often needs true; AWS S3 usually false)
SECP_S3_PATH_STYLE=false

# ===== MinIO (only if you run MinIO in prod; otherwise leave empty) =====
MINIO_ROOT_USER=
MINIO_ROOT_PASSWORD=
MINIO_BUCKET=

# ===== API JWT =====
SECP_JWT_SECRET=<prod-jwt-secret>

# ===== SMS gateway (placeholders; reserved for future wiring) =====
# Provider example: aliyun|tencent|twilio|mock
SECP_SMS_PROVIDER=<sms-provider>
SECP_SMS_API_KEY=<sms-api-key>
SECP_SMS_API_SECRET=<sms-api-secret>
SECP_SMS_TEMPLATE_ID=<sms-template-id>
SECP_SMS_SIGN_NAME=<sms-sign-name>

# ===== Optional: logging / rate-limit placeholders =====
# Spring Boot logging keys
LOGGING_LEVEL_ROOT=INFO

# Reserved rate-limit knobs (may be unused depending on build)
SECP_RATE_LIMIT_ENABLED=false
SECP_RATE_LIMIT_RPS=
SECP_RATE_LIMIT_BURST=
